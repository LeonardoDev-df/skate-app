{
  "name": "skate-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "setup": "npm install && npm run setup:packages",
    "setup:packages": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd packages/frontend && npm install",
    "setup:backend": "cd packages/backend && npm install"
  },
  "devDependencies": {
    "turbo": "^1.13.4"
  }
}
